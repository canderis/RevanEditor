{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"downlevelIteration": true,
		"target": "es5",
		"typeRoots": ["node_modules/@types"],
		"lib": ["ESNext", "dom"]
	},
	"include": ["main.ts", "src/**/*"],
	"exclude": ["node_modules"]
}
